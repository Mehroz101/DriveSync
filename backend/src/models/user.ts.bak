// models/User.js
import mongoose from "mongoose";

const userSchema = new mongoose.Schema({
  googleId: { type: String }, // Only for Google OAuth users
  email: { type: String, required: true, unique: true },
  password: { type: String }, // Only for email/password users
  name: { type: String },
  picture: { type: String },
  authType: { 
    type: String, 
    enum: ['google', 'email'], 
    required: true 
  }, // To differentiate auth methods
  lastFetched: { type: Date }, // optional: track last Drive fetch
}, {
  timestamps: true
});

export default mongoose.model("User", userSchema);  lastFetched: { type: Date }, // optional: track last Drive fetch
